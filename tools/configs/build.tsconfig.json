{
  "include": ["../../src/**/*"],
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "target": "es2020",
    "lib": ["es6"],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules",
    "../../src/thrift/*"
  ]
}
